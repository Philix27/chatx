generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id              Int     @id @unique()
  email           String
  isEmailVerified Boolean
  phone           String
  isPhoneVerified Boolean
  bvn             String
  isBvnVerified   Boolean
  nin             String
  isNinVerified   Boolean
}

model p2p_ads {
  id              Int     @id @unique()
}

model transactions {
  id              Int     @id @unique()
  
}

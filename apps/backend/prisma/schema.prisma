generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id              Int     @id
  walletAddress           String
  email           String
  isEmailVerified Boolean @default(false)
  phone           String?
  isPhoneVerified Boolean @default(false)
  bvn             String?
  isBvnVerified   Boolean @default(false)
  nin             String?
  isNinVerified   Boolean @default(false)
  dob             String?
  address1        String?
  address2        String?
  // bankAccounts bank_account[]
}

model bank_account {
  id        Int    @id
  name      String
  bankName  String
  accountNo String
  // userId user[]
}

model p2p_ads {
  id Int @id @unique()
}

model transactions {
  id Int @id @unique()
}

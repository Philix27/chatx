{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "types": [],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*", "./src/*"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "tmp", "server"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/file/page.tsx",
    "app/(pages)/cluster9",
    "app/(core)/chat/ConversationContainer.tsx",
    "app/(core)/chat/ListConversations.tsx",
    "app/(core)/chat/MessageContainer.tsx",
    "app/(core)/chat/MessageInput.tsx",
    "app/(core)/chat/MessageItem.tsx",
    "app/(core)/chat/NewConversation.tsx"
  ]
}
